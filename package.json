{
  "name": "bloomint",
  "version": "1.0.0",
  "description": "A idle cookie clicker.",
  "main": "index.js",
  "scripts": {
    "start": "node_modules\\electron\\dist\\electron.exe .",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder --windows",
    "release": "electron-builder --windows --linux --publish always"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bloomint/bloomint.git"
  },
  "keywords": [
    "cookie",
    "clicker",
    "bloomint",
    "node",
    "electron",
    "cookie-clicker",
    "game",
    "nodejs"
  ],
  "author": "lukeacat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bloomint/bloomint/issues"
  },
  "homepage": "https://github.com/bloomint/bloomint#readme",
  "build": {
    "appId": "lukeacat.bloomint",
    "productName": "Bloomint",
    "mac": {
      "category": "public.app-category.games"
    },
    "dmg": {
      "icon": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Game"
    }
  },
  "devDependencies": {
    "electron-builder": "22.9.1",
    "electron": "11.1.1"
  },
  "dependencies": {
    "discord-rich-presence": "0.0.8"
  }
}
